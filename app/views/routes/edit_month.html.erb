<div class="container">
<h5 style="font-weight: bold">Edit route</h5>
  <div class="row">
    <div class="col">
      <form action="/update_month" method="post">
        <input type="hidden" value="put" name="_method">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token() %>"/>
        <div class="form-group">
        <input type="hidden" name="route_id" value="<%= @route.id %>">
        <label for="starting_adress" class="font-weight-bold">Starting address</label>
          <input type="text" class="form-control" name="starting_adress" value="<%= @route.starting_adress %>">
        <label for="destination_adress" <p class="font-weight-bold"></p>Destination address</label>
          <input type="text" class="form-control" name="destination_adress" value="<%= @route.destination_adress %>">
        <p></p>
        <button type="submit" style="float: right;" class="btn btn-primary">Submit</button>
      </form>
      <%= link_to "Go back", show_month_path(day: @route.created_at ), method: "get", class: "btn btn-success" %>
    </div>   
  </div>
</div>

